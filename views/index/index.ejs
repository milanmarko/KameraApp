<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mogaac Kamera App</title>
    <link rel="icon" href="img/favicon.ico" type="image/x-icon">
    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/index.css">
</head>
<body>
    <div class="container">
        <div class="row mt-5 text-center">
            <div class="col-12 col-md-6 justify-content-center">
                <h1>Hazai: <span id="homeScore"><%= homeScore  %></span></h1>
                <hr>
            </div>
            <div class="col-12 col-md-6 justify-content-center">
                <h1>Vendég: <span id="awayScore"><%= awayScore  %></span></h1>
                <hr>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6 mt-3">
                <div class="container-fluid">
                    <div class="row d-md-none d-lg-none">
                        <div class="col-12 p-2">
                            <h5 class="text-center">Hazai</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 d-flex justify-content-center">
                            <button onclick="pointAdd('home', 1)" class="btn button">+1</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 d-flex justify-content-center">
                            <button onclick="pointAdd('home', 2)" class="btn button">+2</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 d-flex justify-content-center">
                            <button onclick="pointAdd('home', 3)" class="btn button">+3</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6 mt-3">
                <div class="container-fluid">
                    <div class="row d-md-none d-lg-none" >
                        <div class="col-12 p-2">
                            <h5 class="text-center">Vendég</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 d-flex justify-content-center">
                            <button onclick="pointAdd('away', 1)" class="btn button">+1</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 d-flex justify-content-center">
                            <button onclick="pointAdd('away', 2)" class="btn button">+2</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 d-flex justify-content-center">
                            <button onclick="pointAdd('away', 3)" class="btn button">+3</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="mt-2 col-12 col-md-4 d-flex justify-content-center">
                <button class="btn btn-danger" onclick="reset()">Pontok nullázása</button>
            </div>
            <div class="mt-2 col-12 col-md-4 d-flex justify-content-center">
                <button class="btn btn-secondary" onclick="undo()">Előző akció visszavonása</button>
            </div>
            <div class="mt-2 col-12 col-md-4 d-flex justify-content-center">
                <button class="btn btn-primary" onclick="document.location.href = '/setScore'">Pontos eredmény beállítása</button>
            </div>
        </div>
    </div>
    <!-- Jquery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy" crossorigin="anonymous"></script>
    <script src="js/main.js"></script>
</body>
</html>